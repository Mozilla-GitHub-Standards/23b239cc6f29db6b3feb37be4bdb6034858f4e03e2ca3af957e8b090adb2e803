{
  "name": "gpio-adapter",
  "version": "0.3.0-pre3",
  "description": "GPIO adapter plugin for Mozilla IoT Gateway",
  "main": "index.js",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "gpio"
  ],
  "homepage": "https://iot.mozilla.org/",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/gateway.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/gateway/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "gpio-adapter.js",
    "index.js"
  ],
  "moziot": {
    "api": {
      "min": 1,
      "max": 1
    },
    "plugin": true,
    "exec": "node ./src/addon-loader.js gpio-adapter",
    "config": {
      "pins": {
        "18": {
          "name": "led",
          "direction": "out",
          "value": 0
        }
      }
    }
  }
}
